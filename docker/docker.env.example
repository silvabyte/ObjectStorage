# ObjectStorage Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# Server Configuration
# =============================================================================

# Host to bind to (use 0.0.0.0 for Docker)
OBJECT_STORAGE_HOST=0.0.0.0

# Port to listen on
OBJECT_STORAGE_PORT=8080

# =============================================================================
# Storage Configuration
# =============================================================================

# Base path for file storage (inside container: /app/bucket)
# For production, mount a volume to this path
# STORAGE_PATH=/data/objectstorage

# =============================================================================
# KeyDB/Redis Configuration (for distributed locking)
# =============================================================================

KEYDB_HOST=keydb
KEYDB_PORT=6379

# =============================================================================
# Logging Configuration
# =============================================================================

# Set to true for human-readable logs (development)
# Set to false for JSON logs (production)
LOG_PRETTY=false

# =============================================================================
# JVM Configuration
# =============================================================================

# JVM options for the application
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# For production with more memory:
# JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -Xms512m -Xmx4g

# =============================================================================
# Cloudflare Tunnel (optional, for production)
# =============================================================================

# Tunnel token from Cloudflare Zero Trust dashboard
# TUNNEL_TOKEN=your-tunnel-token-here
